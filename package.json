{
  "name": "3tk",
  "version": "0.4.3",
  "description": "Three.js Toolkit",
  "author": "Kenneth Jiang <kenneth.jiang@gmail.com>",
  "license": "MIT",
  "main": "dist/3tk.js",
  "module": "dist/3tk.module.js",
  "jsnext:main": "dist/3tk.module.js",
  "scripts": {
    "prebuild": "eslint src test",
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "reload": "livereload 'dist/'",
    "server": "http-server . -p 7000 -c-1",
    "dev": "npm-run-all --parallel server reload watch",
    "clean": "rimraf dist && mkdirp dist ",
    "pretest": "npm run build",
    "test": "mocha",
    "prepublish": "npm test"
  },
  "keywords": [
    "three.js",
    "toolkit"
  ],
  "repository": "https://github.com/kennethjiang/3tk.git",
  "bugs": {
    "url": "https://github.com/kennethjiang/3tk/issues"
  },
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "three": "^0.84.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "babelrc-rollup": "^3.0.0",
    "chai": "^4.1.2",
    "dat.gui": "^0.6.1",
    "eslint": "^3.12.2",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.5",
    "jsdom": "^11.2.0",
    "jsdom-global": "^3.0.2",
    "livereload": "^0.6.2",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.4.3",
    "rollup": "^0.37.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-watch": "^2.5.0",
    "stats.js": "^0.17.0"
  }
}
